<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/po_rl1"
            android:layout_gravity="center_vertical">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/po_check"
                android:visibility="gone"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/po_rl2"
            >
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl1"
                android:id="@+id/tablerow_storecode"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Code"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:id="@+id/storecode_text"
                    android:layout_weight="0.32"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.49"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Code Value"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/storecode_value"
                    android:layout_weight="0.2"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl1"
                android:layout_below="@id/tablerow_storecode"
                android:id="@+id/tablerow_storename"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Name"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:id="@+id/storename_text"
                    android:layout_weight="0.32"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.49"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Name Value"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/storename_value"
                    android:layout_weight="0.2"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rel1"
                android:layout_below="@id/tablerow_storename"
                android:id="@+id/tablerow_reqqty"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Requestion Quantity"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:id="@+id/reqqty_text"
                    android:layout_weight="0.32"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.49"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Requestion Quantity Value"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/reqqty_value"
                    android:layout_weight="0.2"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rel1"
                android:layout_below="@id/tablerow_reqqty"
                android:id="@+id/tablerow_orderqty"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Quantity"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:id="@+id/orderqty_text"
                    android:layout_weight="0.32"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.49"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Quantity Value"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/orderqty_value"
                    android:layout_weight="0.2"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rel1"
                android:layout_below="@id/tablerow_orderqty"
                android:id="@+id/tablerow_recievqty"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recieved Quantity"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:id="@+id/recqty_text"
                    android:layout_weight="0.32"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.49"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recqty_value"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/rl1"
                android:layout_below="@id/tablerow_storename"
                android:id="@+id/tablerow_storeid"
                android:visibility="gone"
                android:weightSum="1.0">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Id"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/black"
                    android:id="@+id/storeid_text"
                    android:layout_weight="0.32"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_weight="0.49"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Store Id Value"
                    android:paddingLeft="5dp"
                    android:textSize="13dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:id="@+id/storeid_value"
                    android:layout_weight="0.2"/>

            </TableRow>
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
