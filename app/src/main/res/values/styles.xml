<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar" />
    - <style name="AppTheme" parent="AppBaseTheme">
    <item name="android:actionBarStyle">@style/MyActionBar</item>

</style>
    - <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar">
    <item name="android:background">#DAD8D8</item>
    <item name="android:titleTextStyle">@style/TitleColor</item>
</style>

    - <style name="TitleColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#1562AE</item>
    <item name="android:textSize">15sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:layout_gravity">center_horizontal</item>
</style>

    - <style name="logo" parent="AppBaseTheme">
    <item name="android:textColor">#1562AE</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
</style>

    - <style name="login" parent="AppBaseTheme">
<item name="android:textColor">#FFFFFF</item>
<item name="android:textStyle">bold</item>
</style>

    - <style name="url" parent="AppBaseTheme">
    <item name="android:textColor">#000000</item>
    <item name="android:textStyle">bold</item>
</style>

    - <style name="home" parent="AppBaseTheme">
    <item name="android:textColor">#000000</item>
    <item name="android:textStyle">bold</item>
</style>

    - <style name="Inv" parent="AppBaseTheme">
    <item name="android:textColor">#000000</item>
    <item name="android:textStyle">bold</item>
</style>

    - <style name="Inv_com" parent="AppBaseTheme">
    <item name="android:textColor">#000000</item>
    <item name="android:textStyle">bold</item>
    <item name="android:colorBackground">#3FA9F5</item>
</style>

    - <style name="Main_head" parent="AppBaseTheme">
    <item name="android:textColor">#000000</item>
    <item name="android:textStyle">bold</item>

</style>
    - <style name="Main_com_scan" parent="AppBaseTheme">
    <item name="android:textColor">#000000</item>
    <item name="android:textStyle">bold</item>

</style>

</resources>
